    <!--background: #1a9af5;-->
    <!--border-radius: 3px;-->
  <!--">-->
      <!--Latest messages-->
    <!--</div>-->
  <!--</div>-->

  {{#has_messages}}
    <table style="width: 100%;">
    {{#messages}}
      <tr>
        <td style="border: 0px solid rgb(0, 0, 0); vertical-align: top; width: 60px;">
          <img src="{{fullPathToPicture}}"
              style="
                width: 40px;
                height: 40px;
                background: #F5F5F5;
                /*border: solid 1px #E6E6E6;*/
                overflow:hidden;
                border-radius: 2px;
              "/>
        </td>
        <td style="border: 0px solid rgb(0, 0, 0); vertical-align: top;">
          <div style="
            background-color: #F8F8F8;
            margin: 0 auto 10px auto;
            border-radius: 4px;
            border: solid 1px #E5E5E5;
            transition: background-color 2s;
            font-size: 15px;
            color: #2d2d2d;
            padding: 5px 10px 0px;
          ">
            <table style="border: none; border-collapse: collapse; width: 100%;">
              <tr>
                <td align="left" style="
                  border: 0px solid rgb(0, 0, 0);
                  vertical-align: top;
                ">
                  <strong>{{usernameForDisplay}}</strong>
                </td>
                <td align="right" style="
                  border: 0px solid rgb(0, 0, 0);
                  vertical-align: top;
                  width: 50px;
                  font-size: 12px;
                  padding-top: 3px;
                  color: #666;
                ">
                  <!--6h ago-->
                </td>
              </tr>
              <tr>
                <td style="border: 0px solid rgb(0, 0, 0); vertical-align: top;">
                  <div style="margin-top: 10px;">
                    {{#items}}
                      <div style="
                        font-size: 16px;
                        line-height: 20px;
                        letter-spacing: 0.2pt;
                        margin-bottom: 8px;
                      ">
                        {{{message}}}
                      </div>
                    {{/items}}
                  </div>
                </td>
              </tr>
            </table>
          </div>
        </td>
      </tr>
      {{/messages}}
    </table>
  {{/has_messages}}

  {{^messages}}
    <p style="
    margin-left: 15px;
    color: gray;
    font-size: 15px;
  ">
      No messages today.
    </p>
  {{/messages}}


  <div style="
    height: 10px;
    width: 100%;
    border-bottom: solid 1px #EBEBEB;
  ">
  </div>

  <div style="
    text-align:center;
    margin:40px 0;
    ">
    <a href="http://woven.co/{{community}}" target="_blank"
       style="
        text-decoration: none;
        background: #4A9E2E;
        border-radius: 3px;
        padding: 12px 20px;
        font-size: 18px;
        color: #fff;
        font-family: 'Helvetica Neue', 'Liberation Sans', Arial, sans-serif;
      ">
      Go to the channel
    </a>
    <p style="
    margin-top: 30px;
    color: #666;
    font-size: 15px;
    ">
    Feedback? Just reply to this email.
    </p>
    <img src="https://assets-cdn.github.com/images/icons/emoji/unicode/1f638.png?v5" style="display: inline-block;vertical-align: sub;width: 1.5em;height: 1.5em;background-size: 1.5em;background-repeat: no-repeat;text-indent: -9999px;" />
  </div>
</div>
</body>
</html>